		{
			"name": "1. Authentication",
			"item": [
				{
					"name": "Login - First Time (Will Fail)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 403 - Password change required\", function () {",
									"    pm.response.to.have.status(403);",
									"});",
									"",
									"pm.test(\"Must change password flag is present\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.must_change_password).to.eql(true);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin@2024!\"\n}"
						},
						"url": {
							"raw": "http://localhost:5001/auth/login",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "5001",
							"path": [
								"auth",
								"login"
							]
						},
						"description": "First login attempt with default credentials. Will fail with 403 because password change is required."
					},
					"response": []
				},
				{
					"name": "Force Password Change",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Password changed successfully\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.msg).to.include(\"Password changed successfully\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@example.com\",\n  \"current_password\": \"Admin@2024!\",\n  \"new_password\": \"MySecurePass123!\"\n}"
						},
						"url": {
							"raw": "http://localhost:5001/auth/force-password-change",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "5001",
							"path": [
								"auth",
								"force-password-change"
							]
						},
						"description": "Change password on first login. No JWT token required."
					},
					"response": []
				},
				{
					"name": "Login - Success",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Access token is present\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.access_token).to.exist;",
									"    pm.environment.set(\"admin_token\", jsonData.access_token);",
									"    pm.environment.set(\"token_expiry\", Date.now() + 14 * 60 * 1000);",
									"});",
									"",
									"pm.test(\"User has admin role\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.user.roles).to.include(\"admin\");",
									"});",
									"",
									"pm.test(\"Must change password is false\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.user.must_change_password).to.eql(false);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"MySecurePass123!\"\n}"
						},
						"url": {
							"raw": "http://localhost:5001/auth/login",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "5001",
							"path": [
								"auth",
								"login"
							]
						},
						"description": "Login with new password after force password change. Saves token to environment variable."
					},
					"response": []
				},
